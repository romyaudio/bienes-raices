extend ../layout/admin

block contenido
 //pre= JSON.stringify(mensage,undefined,2)
 h2(class="text-2xl font-bold my-10 text-center")=pagina
 a(href="/dashboard" class="rounde  px-10 py-3 bg-indigo-600 text-white hover:bg-indigo-700 text-sm uppercase font-semibold text-center my-5 inline-block w-full md:w-auto") Volver

 div(class="mx-auto max-w-4xl bg-white shadow p-6")
   if mensage.length
       ul
          each msg in mensage
             li(class="border-gray-500 border-b p-3" )  
                 p(class="font-bold text-gray-800") Nombre 
                     span(class="font-normal")=msg.user.name
                 p(class="font-bold text-gray-800") Email 
                     span(class="font-normal")=msg.user.email    
                 p(class="font-bold text-gray-800") Mensage 
                     span(class="font-normal")=msg.mensage 
                 p(class="font-bold text-gray-800") Enviado  
                     span(class="font-normal")= formatiarFecha(msg.createdAt)
   else 
     p(class="text-center text-gray-600") No hay mensage  