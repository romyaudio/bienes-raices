extend ../layout/index
block contenido
  div.py-10 
     h1.text-4xl.my-10.font-extrabold.text-center Bienes
        span.font-normal Raices
     h2.text-center.text-2xl.font-extrabold= pagina
  div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
     p(class = error ? "bg-red-400" : "bg-green-400").py-2.px-2.rounded-lg.w-full.text-center.text-white.font-semibold.uppercase= message

     if !error
        a(href="/auth/login" class="text-center font-semibold text-sm text-slate-600 uppercase mt-10 block") Inicia Sesion